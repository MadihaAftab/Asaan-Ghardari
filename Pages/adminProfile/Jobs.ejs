<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<meta name="description" content="Home service providers">
		<meta name="keywords" content="AG Providers, Plumber, Mechanics, handyman">
		<meta name="theme-color" content="#3e55a6">
		<title>Jobs</title>
		<style>
			body{
			   font-family: "Lato", sans-serif !important;
               background-color: #f9f9fa !important;
               z-index:0 !important;}
		</style>
		<link rel="stylesheet" type="text/css" href="../../public/CSS/adminStyle.css">
		<link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
		<script src="https://cdn.jsdelivr.net/npm/jquery@3.6.3/dist/jquery.slim.min.js"></script>
    	<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
	</head>
	<body>
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
	    <div class="container-fluid">
        	<div class="row">
				<div class="col-md-2 bg sidebar">
					<div class="logo">
						<img src="../../public/Images/logoo.png" alt="Logo">
					</div>
					<a href="../adminProfile/Dashboard"><i class="fa fa-fw fa-home"></i><span>Dashboard</span></a>
					<a href="../adminProfile/Customers"><i class="fa fa-fw fa-user"></i><span>Customers</span></a>
					<a class="active" href="../adminProfile/Jobs"><i class="fa fa-fw fa-cubes"></i><span>Jobs</span></a>
					<a href="../adminProfile/Workers"><i class="fa fa-fw fa-users"></i><span>Workers</span></a>
					<!-- <a href="../adminProfile/Settings"><i class="fa fa-fw fa-gears"></i><span>Settings</span></a> -->
					<a href="../adminProfile/Login"><i class="fa fa-fw fa-sign-out"></i><span>Logout</span></a>
				</div>

				<div class="padding">
                    <div class="row container d-flex justify-content-center">
                        <div class="col-md-12">
                            <div class="col-md-12 card">
                                <div class="card-body text-right">
                                    <h1 class="card-title">Jobs</h1>
                                </div>
								<% if(action=='add' ) {%>
									<% } else {%>
		
										<div class="table-responsive">
											<table class="table table-hover">
												<thead>
													<tr>
														<th>JobID</th>
														<th>Type</th>
														<th>Date</th>
														<th>Location</th>
														
													</tr>
												<!-- <tbody> -->
														<%
														if(jobs.length >0){
															jobs.forEach(function(jobdata){
														%>
														<tr data-href="./job_Details">
															<td><%= jobdata.Job_id %></td>
															<td><%= jobdata.type %></td>
															<td><%= jobdata.date %></td>
															<td><%= jobdata.location %></td>
															
															<!-- <td><%= jobdata.email %></td> -->
															<!-- <td><%= jobdata.phone %></td> -->
															<td></td>
														</tr>
														<%
															});
		
													   
														}
														else
														{
														%>
														<tr>
															<td colspan="5">No Data Found</td>
														</tr>    
														<%
														}
														%>
											</table>
		
										</div>
		
										<% } %>
		
							</div>
					</div>
				</div>
			</div>
		</div>
	<script src="../../public/JavaScript/adminScript.js"></script>
</body>
</html>
