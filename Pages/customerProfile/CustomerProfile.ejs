<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Home service providers">
    <meta name="keywords" content="AG Providers, Plumber, Mechanics, handyman">
    <meta name="theme-color" content="#3e55a6">
    <title>CustomerProfile</title>
    <style>
			body{
               background-color: #f9f9fa !important;
              }
            #assign-Btn:hover{
                    background-color: Maroon !important;}
            .text-color-custom:hover{
                    color: white !important;}
    </style>
    <link rel="stylesheet" type="text/css" href="../../public/CSS/customerStyle.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.3/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>

</head>
<body>
    <div class="container-fluid">
        <div class="row min-vh-100 flex-column flex-md-row">
            <aside class="col-12 col-md-3 col-xl-2 p-0 flex-shrink-1" id="sidebar-color">
                <nav class="navbar navbar-expand-md navbar-dark bd-dark flex-md-column flex-row align-items-center py-2 text-center sticky-top">
                    <div class="text-center p-3">
                        <img src="../../public/Images/user.png" alt="profile picture" class="img-fluid rounded-circle my-4 p-1 d-none d-md-block shadow">
                        <p class="navbar-brand mx-5 font-weight-bold text-nowrap" id="name"> <%= custumer.firstname+custumer.lastname %></p>
                    </div>
                    <div class="collapse navbar-collapse order-last" id="nav">
                        <ul class="navbar-nav flex-column w-100 justify-content-center">
                            <li class="nav-item">
                                <a href="../customerProfile/CustomerProfile" class="nav-link active"> Dashboard</a>
                            </li>
                            <li class="nav-item">
                                <a href="../customerProfile/jobDetails" class="nav-link"> Job Details </a>
                            </li>
                            <li class="nav-item">
                                <a href="../customerProfile/editProfile" class="nav-link"> Edit Profile</a>
                            </li>
                        </ul>
                    </div>
                </nav>
                <div>
                    <a href="../adminProfile/Login">
                         <button class="btn-primary" id="logout-btn">Logout</button>
                    </a>
                </div>
            </aside>
            <div class="col-12 col-md-9 col-xl-10" id="main-section">
                <div class="row">
                    <img src="../../public/Images/customerdash.jpg" alt="Dashboard image" class="dash-img">
                    <div class="center"><b>Welcome to Asaan Ghardaari- The best Home Service Providers!</b></div>
                    <button type="button" id="assign-Btn" class="btn btn-outline-primary text-color-custom" style="border-color: Maroon; color:Maroon; left:20px;" >Create Jobs</button>
                    <div class="modal fade" id="createJobModal" tabindex="-1" aria-labelledby="createJobModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-lg">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="createJobModalLabel">Create Job</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <form action="/auth/customerProfile/CustomerProfile" method="post"  id="JobForm">
                                        <div class="mb-3">
                                            <label for="jobDescription" class="form-label">Job Description</label>
                                            <input type="text" class="form-control" id="jobDescription" name="description" required>
                                        </div>
                                        <div class="mb-3">
                                            <label for="jobDate" class="form-label">Date</label>
                                            <input type="date" class="form-control" id="jobDate" name="date" required>
                                        </div>
                                        <div class="mb-3">
                                            <label for="jobTime" class="form-label">Time</label>
                                            <input type="time" class="form-control" id="jobTime" name="time" required>
                                        </div>
                                        <div class="mb-3">
                                            <label for="jobAmount" class="form-label">Amount</label>
                                            <input type="number" step="1" class="form-control" id="jobAmount" name="amount" required>
                                        </div>
                                        <div class="mb-3">
                                            <label for="workerRole" class="form-label">Worker Role</label>
                                            <select class="form-control" id="workerRole" name="type" required>
                                                <option value="">--Select Worker Role</option>
                                                <option value="plumber">Plumber</option>
                                                <option value="mechanic">Mechanic</option>
                                                <option value="painter">Painter</option>
                                                <option value="electrician">Electrician</option>
                                                <option value="handyman">Handy Man</option>
                                                <option value="sweeper">Sweeper</option>
                                            </select>
                                        </div>
                                        <div class="mb-3">
                                            <label for="jobAddress" class="form-label">Address</label>
                                            <input type="text" class="form-control" id="jobAddress" name="location" required>
                                        </div>
                                        <input type="hidden" name="customerId" value= <%= custumer.Id %> >
                                        <div class="form-group">
                                                <button type="submit" class="btn btn-primary" style="background-color: Maroon;border-color: Maroon; margin-left:600px;">Create</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                    <div class="row card" id="jobs-card">
                        <div class="card-body text-right" id="card-text">
                            <h3 class="card-title">Jobs</h3>
                        </div>
                        <% if(action=='add' ) {%>
                            <% } else {%>

                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                                <th>ID</th>
                                                <th>Type</th>
                                                <th>Date</th>
                                                <th>Location</th>
                                                
                                            </tr>
                                        <!-- <tbody> -->
                                                <%
                                                if(jobs.length >0){
                                                    jobs.forEach(function(jobdata){
                                                %>
                                                <tr>
                                                    <td><%= jobdata.Job_id %></td>
                                                    <td><%= jobdata.type %></td>
                                                    <td><%= jobdata.date %></td>
                                                    <td><%= jobdata.location %></td>
                                                    <!-- <td><%= jobdata.email %></td> -->
                                                    <!-- <td><%= jobdata.phone %></td> -->
                                                    <td></td>
                                                </tr>
                                                <%
                                                    });

                                               
                                                }
                                                else
                                                {
                                                %>
                                                <tr>
                                                    <td colspan="5">No Data Found</td>
                                                </tr>    
                                                <%
                                                }
                                                %>
                                    </table>

                                </div>

                                <% } %>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.min.js"></script>
    <script src="../../public/JavaScript/customerScript.js"></script>
</body>
</html>